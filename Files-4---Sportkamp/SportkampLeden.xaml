<Window x:Class="Files_4___Sportkamp.SportkampLeden"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Files_4___Sportkamp"
        mc:Ignorable="d"
        Title="Leden van het sportkamp" Height="450" Width="800">
    <TabControl Margin="5">
        <TabItem Header="Details" FontStyle="Italic">
            <TextBox x:Name="detailsTextBox" VerticalScrollBarVisibility="Auto" FontFamily="Consolas" IsReadOnly="True"/>
        </TabItem>
        <TabItem Header="Overzicht per week" FontStyle="Italic">
            <TextBox x:Name="weekOverviewTextBox" FontFamily="Consolas" IsReadOnly="True"/>
        </TabItem>
        <TabItem Header="Overzicht per sporttak" FontStyle="Italic">
            <TextBox x:Name="sportOverviewTextBox" FontFamily="Consolas" IsReadOnly="True"/>
        </TabItem>
    </TabControl>
</Window>
